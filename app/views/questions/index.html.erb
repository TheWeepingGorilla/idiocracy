<h2>Idiocracy: <small>Your Source for Questions That Shouldn't Need Answers</small></h2>
<ul>
  <% @questions.each do |question| %>
    <br>
    <li><%= "#{question.question}" %>
        <%= link_to "Add Response", question_path(question) %>
        <%= link_to "Edit",edit_question_path(question) %>
        <%= link_to "Delete", question_path(question), :data => {:confirm => "You sure?", :method => "delete"} %>
    </li>
  <% end %>
</ul>
<br>
<%= link_to "New Question", new_question_path, remote: true, :class=> "btn btn-success", id: "new_q" %>
